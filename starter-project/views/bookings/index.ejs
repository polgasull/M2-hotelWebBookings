    <a href="/"> <button class="btn btn-primary"> Volver al menú principal </button>  </a> 

<h2> Habitaciones Disponibles </h2>
<br>
    
<div class="container-fluid container-users">

    <table class="table table-hover table-responsive">
        <thead>
            <tr>
            <th>Imagen</th>
            <th>Tipo </th>
            <th>Categoría</th>
            <th>Vista</th>
            <th>Máximo de personas</th>
            <th>Tamaño en m2</th>
            <th>Tipo de cama</th>
            <th>Precio</th>
            <th>Descripción</th>
            </tr>
    </thead>
    <% rooms.forEach((roomToBook) => { %>
        <tbody>
            <tr>
            <td scope="row"><img class="roomPic" src="<%= roomToBook.photo %>" alt="roompicture"></td>
            <td> <%= roomToBook.type %> </td>
            <td> <%= roomToBook.category %> </td>
            <td> <%= roomToBook.view %> </td>
            <td> <%= roomToBook.capacity %> </td>
            <td> <%= roomToBook.size %> </td>
            <td> <%= roomToBook.typeOfBed %> </td>
            <td> <%= roomToBook.price %> </td>
            <td> <%= roomToBook.description %> </td>
            <th>   
                <form action="/bookings/new" method="POST">
                    <button class="btn btn-success" type="submit"> Book </button>
                </form>
            </th>
            </tr>
        </tbody>
            <%  }); %>
    </table>
    
</div>